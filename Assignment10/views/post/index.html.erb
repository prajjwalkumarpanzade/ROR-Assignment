<center>
<h1>Posts</h1>
  <table class="table table-striped"  border='1' style='border-collapse:collapse'>
    <thead>
      <tr>
        <th width="200"  style= "border: solid 2px;">Title</th>
        <th width="500"  style= "border: solid 2px;">Description</th>
        <th width="200" style= "border: solid 2px;">Author_id</th>
        <th width="200"  style= "border: solid 2px;">Action</th>
        <th width="200"  style= "border: solid 2px;">Action</th>
        <th width="200"  style= "border: solid 2px;">Action</th>
        
       </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td width="200"  style= "border: solid 2px;"><%= post.title %></td>
          <td width="500"  style= "border: solid 2px;"><%= post.body%></td>
          <td width ="200" style= "border: solid 2px;"><%= post.user_id%></td>
          <td width="200"  style= "border: solid 2px;"><%= link_to 'Update', edit_user_path(post) , method: :get%></td>
          <td width="200"  style= "border: solid 2px;"><%= link_to 'Show', post%></td>
          <td width="200"  style= "border: solid 2px;"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <button style= "background-color:red; width:100px; height:50px;font-size:15px;"><%= link_to 'New Post', new_post_path %></button>
  </center>